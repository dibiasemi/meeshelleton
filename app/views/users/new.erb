<h3>Register:</h3>

<% if @errors %>
  <%= erb :'_errors', layout: false, locals: {error: @errors} %>
<% end %>

<form id="forms" method='POST' action='/users'>
  <label for="name">Name:</label><br>
  <input type="text" name="user[name]" placeholder="Micky Mouse"><br>
  <label for="username">Username:</label><br>
  <input type="text" name="user[username]" placeholder="macmo"><br>
  <label for="email">Email:</label><br>
  <input type="email" name="user[email]" placeholder="micky@disney.com"><br>
  <label for="password">Password:</label><br>
  <input type='password' name='user[password]' placeholder='********', value="">
  <br>
  <input type="submit" value="Register">
</form>
