<h3>Register</h3>


<% if @errors %>
  <%= erb :'_errors', layout: false, locals: {error: @errors} %>
<% end %>

<form class="forms" method='POST' action='/users'>
  <label for="name">Name:</label><br>
  <input type="text" name="user[name]" placeholder="Micky Mouse" value="<%= @user.try(:name) %>"><br>
  <label for="username">Username:</label><br>
  <input type="text" name="user[username]" placeholder="macmo" value="<%= @user.try(:username) %>"><br>
  <label for="email">Email:</label><br>
  <input type="email" name="user[email]" placeholder="micky@disney.com" value="<%= @user.try(:email) %>"><br>
  <label for="password">Password:</label><br>
  <input type='password' name='user[password]' placeholder='********', value="">
  <br>
  <input type="submit" value="Register" class="button">
</form>
