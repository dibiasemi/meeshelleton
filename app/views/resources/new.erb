<h3>New Resource</h3>

<% if @errors %>
<%= erb :"_errors", locals: {errors: @errors} %>
<% end %>

<form method="POST" action="/resources">
  <label for="name">Name:</label><br>
  <input type="text" name="resource[name]" value="<%= @resource.try(:name) %>" placeholder="name"><br>
  <label for="name">Description:</label><br>
  <textarea rows="15" cols="75" name="resource[description]" placeholder="Type here..." value="<%= @resource.try(:description) %>"></textarea><br>
  <input type="submit" value="Create Resource" class="button">
</form>